<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.satman.satya.encryption.WelcomeActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="base64 encryption"
        android:onClick="satbase64"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="MD5 hash algorithem"
        android:onClick="satmd5"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="sha1 algoritham"
        android:onClick="satsha1"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="RSA encryption"
        android:onClick="satrsa"/>





</LinearLayout>
